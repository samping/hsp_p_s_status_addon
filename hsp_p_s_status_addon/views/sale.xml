<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_sale_order_form1">
        <field name="name">sale.order inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="hsp_invoice_date"/>
                <field name="hsp_invoice_ref"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_sale_order_tree1">
        <field name="name">sale.order inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="replace">
                <field name="hsp_move_status"/>
                <field name="hsp_invoice_status"/>
                <field name="hsp_payment_status"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_sale_order_quotation_tree1">
        <field name="name">sale.order inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="hsp_move_status"/>
                <field name="hsp_invoice_status"/>
                <field name="hsp_payment_status"/>
            </xpath>
        </field>
    </record>
</odoo>