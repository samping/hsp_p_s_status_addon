<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_purchase_order_form1">
        <field name="name">purchase.order inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="hsp_invoice_date"/>
                <field name="hsp_invoice_ref"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_purchase_order_tree1">
        <field name="name">purchase.order inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="hsp_move_status"/>
                <field name="hsp_invoice_status"/>
                <field name="hsp_payment_status"/>
            </xpath>
        </field>
    </record>
</odoo>